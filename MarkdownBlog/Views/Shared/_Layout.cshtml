<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title</title>

  <!-- Default stylesheets -->
  <link href="~/content/resources/css/default.css" rel="stylesheet" type="text/css" />
  <link href="~/content/vendors/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
  <link href="~/content/vendors/normalize/normalize.css" type="text/css" rel="stylesheet" />
</head>

<body>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <a href="#">
            Start Bootstrap
          </a>
        </li>
        <li>
          <a href="#">Dashboard</a>
        </li>
        <li>
          <a href="#">Shortcuts</a>
        </li>
        <li>
          <a href="#">Overview</a>
        </li>
        <li>
          <a href="#">Events</a>
        </li>
        <li>
          <a href="#">About</a>
        </li>
        <li>
          <a href="#">Services</a>
        </li>
        <li>
          <a href="#">Contact</a>
        </li>
      </ul>
    </div>

    <div class="page-content-wrapper">
      <div class="page-content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div>
                @RenderBody()
                <hr />
                <footer>
                  <p class="text-center">&copy; @DateTime.Now.Year - Markdown Blog</p>
                </footer>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery script -->
  <script src="~/content/vendors/jquery/js/jquery-2.2.4.min.js"></script>

  <!-- Modernizr script -->
  <script src="~/content/vendors/modernizr/modernizr-2.8.3.min.js"></script>

  <!-- Bootstrap script -->
  <script src="~/content/vendors/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>